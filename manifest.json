{
  "manifest_version": 3,
  "name": "Salesforce Developer Console Sidebar",
  "description": "Replaces the Tabs in the Salesforce Developer Console with a Convenient Sidebar.",
  "version": "1.0",
  "icons": {
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.salesforce.com/_ui/common/apex/debug/ApexCSIPage"
      ],
      "css": [
        "sidebar.css"
      ],
      "js": [
        "sidebar-sorter.js"
      ]
    }
  ]
}